        </activity>

        <activity android:name="com.lambroszannettos.themindmanifesto.MainActivity" />
        <activity android:name="com.lambroszannettos.themindmanifesto.MeditationPlayer" />
        <activity android:name="com.lambroszannettos.themindmanifesto.BaseActivity" />
